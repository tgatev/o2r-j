<?xml version="1.0" encoding="utf-8"?>
<!-- default paths of offerssearchform form points to ofrs -->
<form>
	<fields name="offerssearch">
	<!-- default paths of offerssearch fieldset points to the module -->
	<fieldset name="offerssearch" label="MOD_OFFERSSEARCH_OFFERS_SEARCH"
		addrulepath="/modules/offerssearch/rules"
		addfieldpath="/modules/offerssearch/fields"
	>
		<!-- Name Field. Type: Text. (joomla) -->
		<field
			type="text"
			name="name"
			label="MOD_OFFERSSEARCH_NAME_LABEL"
			description="MOD_OFFERSSEARCH_NAME_DESCRIPTION"
			class="search_offer_name"
			readonly="false"
			disabled="false"
			required="true"
			filter="STRING"
			message="MOD_OFFERSSEARCH_NAME_MESSAGE"
			hint="MOD_OFFERSSEARCH_NAME_HINT"
		/>
		<!-- Ad_network_id Field. Type: Adnetwork. (custom) -->
		<field
			type="adnetwork"
			name="ad_network_id"
			label="MOD_OFFERSSEARCH_AD_NETWORK_ID_LABEL"
			class="list_class"
			multiple="false"
			default=""
			required="true"
			button="true"
		/>
		<!-- Geo_targeting Field. Type: Geotargeting. (custom) -->
		<field
			type="geotargeting"
			name="geo_targeting"
			label="MOD_OFFERSSEARCH_GEO_TARGETING_LABEL"
			class="list_class"
			multiple="true"
			default=""
			required="false"
			readonly="false"
			button="true"
		/>
		<!-- Verticals Field. Type: Verticals. (custom) -->
		<field
			type="verticals"
			name="verticals"
			label="MOD_OFFERSSEARCH_VERTICALS_LABEL"
			class="list_class"
			multiple="true"
			default=""
			required="false"
			readonly="false"
			button="true"
		/>
		<!-- Payout_type Field. Type: Payouttype. (custom) -->
		<field
			type="payouttype"
			name="payout_type"
			label="MOD_OFFERSSEARCH_PAYOUT_TYPE_LABEL"
			class="list_class"
			multiple="true"
			default="0"
			required="true"
			readonly="false"
			button="true"
		/>
		<!-- Adnet_id Field. Type: Adnetwork. (custom) -->
		<field
			type="adnetwork"
			name="adnet_id"
			label="MOD_OFFERSSEARCH_ADNET_ID_LABEL"
			class="adnet_dropdown"
			multiple="true"
			default="0"
			button="true"
		/>
	</fieldset>
	</fields>
</form>