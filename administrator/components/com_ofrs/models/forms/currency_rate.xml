<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_ofrs/models/rules"
	addfieldpath="/administrator/components/com_ofrs/models/fields"
>
	<fieldset name="details">
		<!-- Default Fields. -->
		<!-- Id Field. Type: Text (joomla) -->
		<field
			name="id"
			type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true"
		/>
		<!-- Date Created Field. Type: Calendar (joomla) -->
		<field
			name="created"
			type="calendar"
			label="COM_OFRS_CURRENCY_RATE_CREATED_DATE_LABEL"
			description="COM_OFRS_CURRENCY_RATE_CREATED_DATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S"
			filter="user_utc"
		/>
		<!-- User Created Field. Type: User (joomla) -->
		<field
			name="created_by"
			type="user"
			label="COM_OFRS_CURRENCY_RATE_CREATED_BY_LABEL"
			description="COM_OFRS_CURRENCY_RATE_CREATED_BY_DESC"
		/>
		<!-- Published Field. Type: List (joomla) -->
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1" >
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		<!-- Date Modified Field. Type: Calendar (joomla) -->
		<field name="modified" type="calendar" class="readonly"
			label="COM_OFRS_CURRENCY_RATE_MODIFIED_DATE_LABEL" description="COM_OFRS_CURRENCY_RATE_MODIFIED_DATE_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<!-- User Modified Field. Type: User (joomla) -->
		<field name="modified_by" type="user"
			label="COM_OFRS_CURRENCY_RATE_MODIFIED_BY_LABEL"
			description="COM_OFRS_CURRENCY_RATE_MODIFIED_BY_DESC"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
		<!-- Ordering Field. Type: Numbers (joomla) -->
		<field
			name="ordering"
			type="number"
			class="inputbox validate-ordering"
			label="COM_OFRS_CURRENCY_RATE_ORDERING_LABEL"
			description=""
			default="0"
			size="6"
			required="false"
		/>
		<!-- Version Field. Type: Text (joomla) -->
		<field
			name="version"
			type="text"
			class="readonly"
			label="COM_OFRS_CURRENCY_RATE_VERSION_LABEL"
			description="COM_OFRS_CURRENCY_RATE_VERSION_DESC"
			size="6"
			readonly="true"
			filter="unset"
		/>
		<!-- Dynamic Fields. -->
		<!-- Currency_id Field. Type: Currency. (custom) -->
		<field
			type="currency"
			name="currency_id"
			label="COM_OFRS_CURRENCY_RATE_CURRENCY_ID_LABEL"
			description="JFIELD_TITLE_DESC"
			class="list_class"
			multiple="false"
			default="10"
			required="true"
			button="true"
		/>
		<!-- Rate Field. Type: Number. (joomla) -->
		<field
			type="number"
			name="rate"
			label="COM_OFRS_CURRENCY_RATE_RATE_LABEL"
			default=""
			class="text_area"
			required="true"
			min="0"
			max="40"
			step="0.0001"
		/>
	</fieldset>
	
	<!-- Access Control Fields. -->
	<fieldset name="accesscontrol">
		<!-- Asset Id Field. Type: Hidden (joomla) -->
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this currency_rate"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_ofrs"
			section="currency_rate"
		/>
	</fieldset>
</form>